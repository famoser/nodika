{% extends "primary_secondary_content_base.html.twig" %}

{% block title %}{{ "remove_person.title"|trans }}{% endblock %}
{% block description %}{{ "remove_person.description"|trans }}{% endblock %}
{% set color_class = globals_color_class_person %}

{% trans_default_domain "member" %}

{% block primary_content %}
    <p>{{ "remove_person.really_remove"|trans }}
        <a href="{{ path("member_remove_person", {"person" : person.id}) }}">
            {{ "remove_person.really_remove_confirm"|trans }}
        </a>
    </p>
{% endblock %}

{% block secondary_content %}
    <h3>{{ "remove_person.remove_person"|trans }}</h3>
    <p>{{ "remove_person.remove_person_description"|trans }}</p>
{% endblock %}