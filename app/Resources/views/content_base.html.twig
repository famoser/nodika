        <div class="container header-container">
            <div class="logo-wrapper">
                <img src="{{ asset("dist/logo/nodika.svg") }}" class="logo-img">
            </div>
            <h1>{% block title %}{% endblock %}</h1>
            <p class="h1-description">{% block description %}{% endblock %}</p>
            {% block header %}
            {% endblock %}
        </div>
