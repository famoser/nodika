{% extends 'layout_base.html.twig' %}

{% block layout %}
    <section class="content {{ color_class }}">
        {% for type, messages in app.session.flashbag.all() %}
            <div class="container index-container {{ type }}-color">
                {% for message in messages %}
                    <p>
                        {{ message }}
                    </p>
                {% endfor %}
            </div>
        {% endfor %}
        <div class="container index-container">


            {% block content %}
            {% endblock %}
        </div>
    </section>
{% endblock %}