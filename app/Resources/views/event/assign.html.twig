{% extends "primary_secondary_content_base.html.twig" %}
{% set color_class = globals_color_class_event %}
{% import "macros/kitchen_sink.html.twig" as kitchen_sink %}
{% import "macros/events.html.twig" as events_macro %}

{% block title %}{{ "assign.title"|trans }}{% endblock %}
{% block description %}{{ "assign.description"|trans }}{% endblock %}

{% trans_default_domain "event" %}

{% block primary_content %}
    <h3>{{ "assign.title"|trans }}</h3>
    <p><a href="{{ path("event_assign_all", {"person" : person.id}) }}">{{ "assign.all_to_own_account"|trans }}</a></p>
    {{ events_macro.no_details_table(events) }}
{% endblock %}

{% block secondary_content %}
    <h3>{{ "assign.unassigned_events"|trans }}</h3>
    <p>{{ "assign.unassigned_events_description"|trans }}</p>
{% endblock %}