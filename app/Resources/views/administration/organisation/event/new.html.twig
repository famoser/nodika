{% extends "divided_content_base.html.twig" %}

{% block title %}{{ "new"|trans }}{% endblock %}
{% block description %}{{ "new_action"|trans }}{% endblock %}
{% set color_class = "brown-background" %}

{% trans_default_domain "event" %}

{% block primary_content %}
    {% if no_event_lines %}
        <h2>{{ "no_event_lines_yet"|trans }}</h2>
        <p>
            {{ "no_event_lines_yet_description"|trans }}
            <br/>
            <a href="{{ path("administration_organisation_event_line_new", {"organisation" : organisation.id}) }}">
                {{ "add_event_line"|trans }}
            </a>
        </p>
    {% else %}
        <h2>{{ "new"|trans }}</h2>
        {{ form_start(new_event_form) }}
        {{ form_errors(new_event_form) }}
        {{ form_end(new_event_form) }}
    {% endif %}
{% endblock primary_content %}

{% block secondary_content %}
    <h3>{{ "new"|trans }}</h3>
    <p>{{ "new_description"|trans }}</p>
    <h3>{{ "event_lines"|trans }}</h3>
    <p>
        {{ "event_lines_description"|trans }}
        <br/>
        <a href="{{ path("administration_organisation_event_line_new", {"organisation" : organisation.id}) }}">
            {{ "add_event_line"|trans }}
        </a>
    </p>
{% endblock secondary_content %}