{% extends "primary_secondary_content_base.html.twig" %}

{% block title %}{{ "choose_algorythm"|trans }}{% endblock %}
{% block description %}{{ "choose_algorythm_action"|trans }}{% endblock %}
{% set color_class = "brown-background" %}

{% trans_default_domain "event" %}

{% block primary_content %}
    <h2>{{ "nodika_algorythmus"|trans }}</h2>
    <p>
        {{ "nodika_algorythmus_description"|trans }}
        <br/>
        <a href="{{ path("administration_organisation_event_generate_nodika", {"organisation" : organisation.id}) }}">
            {{ "nodika_algorythmus_action"|trans }}
        </a>
    </p>
    <h2>{{ "round_robin"|trans }}</h2>
    <p>
        {{ "round_robin_description"|trans }}
        <br/>
        <a href="{{ path("administration_organisation_event_generate_round_robin", {"organisation" : organisation.id}) }}">
            {{ "round_robin_action"|trans }}
        </a>
    </p>
{% endblock primary_content %}

{% block secondary_content %}
    <h3>{{ "choose_algorythm"|trans }}</h3>
    <p>{{ "choose_algorythm_description"|trans }}</p>
    <h3>{{ "common_paramters"|trans }}</h3>
    <p>{{ "common_paramters_description"|trans }}</p>
    <h3>{{ "generation_explanation"|trans }}</h3>
    <p>{{ "generation_explanation_description"|trans }}</p>
{% endblock secondary_content %}