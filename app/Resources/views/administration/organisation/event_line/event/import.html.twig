{% extends "primary_secondary_content_base.html.twig" %}

{% block title %}{{ "import_events"|trans }}{% endblock %}
{% block description %}{{ "import_events_action"|trans }}{% endblock %}
{% set color_class = "brown-background" %}

{% trans_default_domain "event" %}

{% block primary_content %}
    {{ form_start(import_events_form) }}
    {{ form_errors(import_events_form) }}
    {{ form_end(import_events_form) }}

    <table class="table table-hover">
        <thead>
        <tr>
            <th>{{ "member_id"|trans }}</th>
            <th>{{ "member"|trans({}, "member") }}</th>
        </tr>
        </thead>
        <tbody>
        {% for member in members %}
            <tr>
                <td>{{ member.id }}</td>
                <td>{{ member.name }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock primary_content %}

{% block secondary_content %}
    <h3>{{ "import_events"|trans }}</h3>
    <p>
        {{ "import_events_description"|trans }}
        <br/>
        <a href="{{ path("administration_organisation_event_import_download_template", { "organisation" : organisation.id}) }}">
            {{ "import_events_template_download"|trans }}
        </a>
    </p>
    <h3>{{ "import_events_required"|trans }}</h3>
    <p>{{ "import_events_required_description"|trans }}</p>

{% endblock secondary_content %}