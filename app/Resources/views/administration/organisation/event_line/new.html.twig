{% extends "primary_secondary_content_base.html.twig" %}

{% block title %}{{ "new.title"|trans }}{% endblock %}
{% block description %}{{ "new.description"|trans }}{% endblock %}
{% set color_class = "brown-background" %}

{% trans_default_domain "event_line" %}

{% block primary_content %}
    <h3>{{ "new.event_line_add_form"|trans }}</h3>
    {{ form(new_event_line_form) }}
{% endblock primary_content %}

{% block secondary_content %}
    <h3>{{ "entity.name"|trans({}, "entity_event_line") }}</h3>
    <p>{{ "entity.description"|trans({}, "entity_event_line") }}</p>
{% endblock secondary_content %}