{% if is_granted("ROLE_USER") or is_granted("ROLE_ADMIN") %}
    <div class="container menu-container">
        <div class="menu-toggle-container">
            <div class="menu-toggle">
                <div class="nav-icon navigation" id="nav-toggle">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>
        </div>
        <div class="menu-entries-container navigation">
            <h3>{{ "menu.menu"|trans({}, "content_base") }}</h3>
            <ul class="menu-entries">
                {% if is_granted("ROLE_USER") %}
                    <li class="menu-group-header">
                        <span>{{ "entity.name"|trans({}, "entity_organisation") }}</span>
                    </li>
                    {% if organisation is defined %}
                        <li>
                            <a href="{{ path("administration_organisation_administer", {"organisation" : organisation.id}) }}">{{ "menu.administer"|trans({}, "content_base") }}</a>
                        </li>
                    {% endif %}
                    <li>
                        <a href="{{ path("administration_organisation_new") }}">{{ "menu.add_organisation"|trans({}, "content_base") }}</a>
                    </li>

                    {% if organisation is defined %}
                        <li class="menu-group-header">
                            <span>{{ "entity.name"|trans({}, "entity_member") }}</span>
                        </li>
                        {% if member is defined %}
                            <li>
                                <a href="{{ path("administration_organisation_member_administer", {"organisation" : organisation.id, "member" : member.id}) }}">{{ "menu.administer"|trans({}, "content_base") }}</a>
                            </li>
                        {% endif %}
                        <li>
                            <a href="{{ path("administration_organisation_member_new", {"organisation" : organisation.id}) }}">{{ "menu.add_member"|trans({}, "content_base") }}</a>
                        </li>
                        {% if member is defined %}
                            <li class="menu-group-header">
                                <span>{{ "entity.name"|trans({}, "entity_person") }}</span>
                            </li>
                            <li>
                                <a href="{{ path("administration_organisation_member_person_new", {"organisation" : organisation.id, "member" : member.id}) }}">{{ "menu.add_person"|trans({}, "content_base") }}</a>
                            </li>
                        {% endif %}

                        <li class="menu-group-header">
                            <span>{{ "entity.name"|trans({}, "entity_event_line") }}</span>
                        </li>
                        {% if eventLine is defined %}
                            <li>
                                <a href="{{ path("administration_organisation_event_line_administer", {"organisation" : organisation.id, "eventLine" : eventLine.id}) }}">{{ "menu.administer"|trans({}, "content_base") }}</a>
                            </li>
                        {% endif %}
                        <li>
                            <a href="{{ path("administration_organisation_event_line_new", {"organisation" : organisation.id}) }}">{{ "menu.add_event_line"|trans({}, "content_base") }}</a>
                        </li>
                        {% if event is defined %}
                            <li class="menu-group-header">
                                <span>{{ "entity.name"|trans({}, "entity_event") }}</span>
                            </li>
                            <li>
                                <a href="{{ path("administration_organisation_event_line_new", {"organisation" : organisation.id, "eventLine" : event.id}) }}">{{ "menu.add_event"|trans({}, "content_base") }}</a>
                            </li>
                        {% endif %}
                    {% endif %}
                {% elseif is_granted("ROLE_ADMIN") %}

                {% endif %}
            </ul>
        </div>
    </div>
{% endif %}