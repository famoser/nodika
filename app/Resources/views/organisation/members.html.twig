{% extends "divided_content_base.html.twig" %}

{% block title %}{{ "members"|trans }}{% endblock %}
{% block description %}{{ "members_action"|trans }}{% endblock %}
{% set color_class = "brown-background" %}

{% trans_default_domain "organisation" %}

{% block primary_content %}
    {% if members|length == 0 %}
<p></p>
    {% else %}
        <table class="table table-hover">
            <thead>
            <tr>
                <td>{{ "Name"|trans({}, "thing") }}</td>
                <td>{{ "addressLines"|trans({}, "address") }}</td>
                <td>{{ "member_persons"|trans({}, "organisation") }}</td>
            </tr>

            </thead>
            <tbody>
            {% for member in members %}
                <tr>
                    <td>{{ member.name }}</td>
                    <td>{{ member.addressLines|join(", ") }}</td>
                    <td>{{ member.persons }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}

{% endblock primary_content %}

{% block secondary_content %}
    <h3>{{ "members"|trans }}</h3>
    <p>{{ "members_description"|trans }}</p>
    <h3>{{ "members_no_person"|trans }}</h3>
    <p>{{ "members_no_person_description"|trans }}</p>
    <h3>{{ "add_members"|trans }}</h3>
    <p>{{ "add_members_description"|trans }}</p>
{% endblock secondary_content %}