{% extends "primary_secondary_content_base.html.twig" %}

{% block title %}{{ "index.title"|trans }}{% endblock %}
{% block description %}{{ "index.description"|trans }}{% endblock %}
{% set color_class = globals_color_class_person %}

{% trans_default_domain "organisation" %}

{% block primary_content %}
    <h3>{{ "index.the_members"|trans }}</h3>
    {% if organisation.members|length > 0 %}
        <table>
            <thead>
            <tr>
                <th>{{ "entity.name"|trans({}, "entity_member") }}</th>
                <th>{{ "entity.plural"|trans({}, "entity_person") }}</th>
            </tr>
            </thead>
            <tbody>
            {% for member in organisation.members %}
                <tr>
                    <td>{{ member.name }}<br/>{{ member.description }}</td>
                    <td>
                        {% for person in member.persons %}
                            {{ person.fullName }} (<a href="mailto:{{ person.email }}">{{ person.email }}</a>)<br/>
                        {% endfor %}
                    <td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>{{ "index.no_members"|trans }}</p>
    {% endif %}
{% endblock %}

{% block secondary_content %}
    <h3>{{ "entity.name"|trans({}, "entity_organisation") }}</h3>
    <p>{{ "entity.description"|trans({}, "entity_organisation") }}</p>
{% endblock %}