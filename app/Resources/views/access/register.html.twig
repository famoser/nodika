{% extends "primary_secondary_content_base.html.twig" %}

{% block title %}{{ "register.title"|trans }}{% endblock %}
{% block description %}{{ "register.description"|trans }}{% endblock %}
{% set color_class = "brown-background" %}

{% trans_default_domain "access" %}

{% block primary_content %}
    <h3>{{ "register.register_form_header"|trans }}</h3>
    {{ form(register_form) }}
{% endblock primary_content %}

{% block secondary_content %}
    <h3>{{ "register.register"|trans }}</h3>
    <p>{{ "register.register_description"|trans }}</p>
    <h3>{{ "register.personal_data"|trans }}</h3>
    <p>{{ "register.personal_data_description"|trans }}</p>
    <h3>{{ "register.pricing"|trans }}</h3>
    <p>{{ "register.pricing_description"|trans({"%free_period_days%" : globals_free_period_days, "%yearly_fee%" : globals_yearly_fee, "%register_fee%" : globals_register_fee}) }}</p>
{% endblock secondary_content %}