{
  "name": "famoser/nodika",
  "description": "emergency service (or any kind of consecutive events) distribution",
  "license": "MIT",
  "require": {
    "php": ">=7.4",
    "ext-iconv": "*",
    "ext-json": "*",
    "ext-pdo": "*",
    "ext-pdo_sqlite": "*",
    "composer/package-versions-deprecated": "^1.11",
    "doctrine/doctrine-bundle": "^2",
    "doctrine/doctrine-migrations-bundle": "^3",
    "doctrine/orm": "^2",
    "dragonmantank/cron-expression": "^2",
    "erusev/parsedown": "^1.6",
    "ramsey/uuid": "^3",
    "symfony/console": "^7",
    "symfony/dotenv": "^7",
    "symfony/flex": "^1",
    "symfony/form": "^7",
    "symfony/framework-bundle": "^7",
    "symfony/mailer": "^7",
    "symfony/runtime": "*",
    "symfony/security-bundle": "^7",
    "symfony/serializer": "^7",
    "symfony/translation": "^7",
    "symfony/twig-bundle": "^7",
    "symfony/validator": "^7",
    "symfony/webpack-encore-bundle": "^2",
    "symfony/yaml": "^7"
  },
  "require-dev": {
    "brainmaestro/composer-git-hooks": "^3",
    "doctrine/doctrine-fixtures-bundle": "^3",
    "fakerphp/faker": "^1",
    "famoser/agnes": "^4",
    "friendsofphp/php-cs-fixer": "^3",
    "phpunit/phpunit": "^11",
    "symfony/phpunit-bridge": "^7"
  },
  "config": {
    "preferred-install": {
      "*": "dist"
    },
    "platform": {
      "php": "8.2"
    },
    "sort-packages": true,
    "allow-plugins": {
      "symfony/flex": true,
      "symfony/runtime": true
    }
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "prepare-environment": [
      "vendor/bin/cghooks update",
      "php bin/console doctrine:migrations:migrate -q"
    ],
    "post-install-cmd": "@prepare-environment",
    "post-update-cmd": "@prepare-environment",
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd",
      "security-checker security:check": "script"
    }
  },
  "extra": {
    "projectTitle": "nodika",
    "symfony": {
      "id": "01C1WTEKAQ8E4EGPA14JTQ2WHZ",
      "allow-contrib": false
    },
    "hooks": {
      "pre-commit": [
        "echo committing as $(git config user.name)",
        "./vendor/bin/php-cs-fixer fix",
        "git update-index --again"
      ],
      "post-merge": "composer install"
    }
  }
}
