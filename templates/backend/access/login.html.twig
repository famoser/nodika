{% extends "single_content_base.html.twig" %}

{% block title %}{{ "page.title"|trans }}{% endblock %}
{% block description %}{{ "page.description"|trans }}{% endblock %}

{% trans_default_domain "admin_login" %}

{% block single_content %}
    {{ form_start(login_form, {"action" : path("admin_login_check")}) }}
    {{ form_errors(login_form) }}
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    {{ form_end(login_form) }}
{% endblock %}