{% extends "primary_secondary_content_base.html.twig" %}

{% block title %}{{ "edit.title"|trans }}{% endblock %}
{% block description %}{{ "edit.description"|trans }}{% endblock %}
{% set theme_color = globals_theme_color_person %}

{% trans_default_domain "member" %}

{% block primary_content %}
    <h3>{{ "edit.member_edit_form"|trans }}</h3>
    {{ form(edit_form) }}
{% endblock %}

{% block secondary_content %}
    <h3>{{ "edit.member_address"|trans }}</h3>
    <p>{{ "edit.member_address_description"|trans }}</p>
    <h3>{{ "edit.member_contact"|trans }}</h3>
    <p>{{ "edit.member_contact_description"|trans }}</p>
{% endblock %}