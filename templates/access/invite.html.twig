{% extends "primary_secondary_content_base.html.twig" %}

{% block title %}{{ "invite.title"|trans }}{% endblock %}
{% block description %}{{ "invite.description"|trans }}{% endblock %}
{% set theme_color = "brown" %}

{% trans_default_domain "access" %}

{% block primary_content %}
    <h3>{{ "invite.register_form_header"|trans }}</h3>
    {{ form(invite_form) }}
{% endblock %}

{% block secondary_content %}
    {% if member is defined %}
        <h3>{{ "invite.account_register"|trans({"%member%" : member.name}) }}</h3>
        <p>{{ "invite.account_register_description"|trans({"%member%" : member.name, "%organisation%" : organisation.name}) }}</p>
    {% endif %}
    <h3>{{ "invite.personal_data"|trans }}</h3>
    <p>{{ "invite.personal_data_description"|trans }}</p>
{% endblock %}