{% extends "primary_secondary_content_base.html.twig" %}
{% import "macros/kitchen_sink.html.twig" as kitchen_sink %}

{% block title %}{{ "invite_resend.title"|trans }}{% endblock %}
{% block description %}{{ "invite_resend.description"|trans }}{% endblock %}
{% set theme_color = "brown" %}

{% trans_default_domain "access" %}

{% block primary_content %}
    <h3>{{ "invite_resend.title"|trans }}</h3>
    <p>{{ "invite_resend.help"|trans }}</p>
    <form action="{{ path("access_invite_resend") }}" method="post">
        {{ kitchen_sink.form_field("email","","email"|trans({}, "trait_user"), "email") }}
        {{ kitchen_sink.submit_form_button("submit", "confirm"|trans({}, "enum_submit_button_type")) }}
    </form>
{% endblock %}

{% block secondary_content %}
    <h3>{{ "invite_resend.email_not_received"|trans }}</h3>
    <p>{{ "invite_resend.email_not_received_description"|trans }}</p>
{% endblock %}