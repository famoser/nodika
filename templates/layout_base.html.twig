<p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade
    your browser</a> to improve your experience and security.</p>
<![endif]-->

<header class="header">

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="{{ path("index_index") }}">{{ "base.brand"|trans({}, "layout") }}</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                    aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    {{ self.menu_entry("index.title"|trans({}, "index"), path("index_index")) }}
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">
                            {{ "base.events_menu.title"|trans({}, "layout") }}
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            {{ self.dropdown_entry("base.events_menu.assign"|trans({}, "layout"), path("assign_index")) }}
                            {{ self.dropdown_entry("base.events_menu.trade"|trans({}, "layout"), path("trade_index")) }}
                            {{ self.dropdown_entry("base.events_menu.confirm"|trans({}, "layout"), path("confirm_index")) }}
                            <div class="dropdown-divider"></div>
                            {{ self.dropdown_entry("base.events_menu.search"|trans({}, "layout"), path("search_index")) }}

                        </div>
                    </li>
                </ul>

                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("login_logout") }}">
                            <i class="fas fa-question"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("account_index") }}">
                            <i class="fas fa-user"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path("login_logout") }}">
                            <i class="fas fa-sign-out"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>


<div class="content-wrapper">
    {% block content %}

    {% endblock %}
</div>

<script src="{{ asset('dist/app.js') }}"></script>
{% block javascript %}

{% endblock %}
</body>
</html>
