{% extends "single_content_base.html.twig" %}

{% block title %}{{ "members.title"|trans }}{% endblock %}
{% block description %}{{ "members.description"|trans }}{% endblock %}

{% trans_default_domain "administration" %}

{% block single_content %}
    <p>
        <a class="btn btn-secondary" href="{{ path("administration_member_new") }}">
            {{ "new.title"|trans({}, "administration_member") }}
        </a>
    </p>
    <table class="table table-striped table-hover table-responsive-xl">
        <thead>
        <tr>
            <th>{{ "name"|trans({}, "trait_thing") }}</th>
            <th>{{ "description"|trans({}, "trait_thing") }}</th>
            <th>{{ "email"|trans({}, "trait_communication") }}</th>
            <th>{{ "entity.plural"|trans({}, "entity_frontend_user") }}</th>
            <th class="minimal-width"></th>
            <th class="minimal-width"></th>
        </tr>
        </thead>
        <tbody>

        {% for member in event_line_models %}
            <tr>
                <td>{{ member.name }}</td>
                <td>{{ member.description }}</td>
                <td>{{ member.email }}</td>
                <td>{{ member.frontendUsers|join(", ") }}</td>
                <td>
                    <a class="btn btn-secondary"
                       href="{{ path("administration_member_edit", {"member" : member.id}) }}">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
                <td>
                    <a class="btn btn-secondary"
                       href="{{ path("administration_member_remove", {"member" : member.id}) }}">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}