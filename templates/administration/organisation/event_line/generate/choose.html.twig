{% extends "primary_secondary_content_base.html.twig" %}

{% block title %}{{ "generate.title"|trans }}{% endblock %}
{% block description %}{{ "generate.description"|trans }}{% endblock %}
{% set theme_color = globals_theme_color_event_line %}

{% trans_default_domain "administration_organisation_event_line" %}

{% block primary_content %}
    <h2>{{ "generate.nodika_algorithmus"|trans }}</h2>
    <p>
        {{ "generate.nodika_algorithmus_description"|trans }}
        <br/>
        <a href="{{ path("administration_organisation_event_line_generate_nodika_new", {"organisation" : organisation.id, "eventLine" : eventLine.id}) }}">
            {{ "generate.nodika_algorithmus_action"|trans }}
        </a>
    </p>

    <h2>{{ "generate.round_robin"|trans }}</h2>
    <p>
        {{ "generate.round_robin_description"|trans }}
        <br/>
        <a href="{{ path("administration_organisation_event_line_generate_round_robin_new", {"organisation" : organisation.id, "eventLine" : eventLine.id}) }}">
            {{ "generate.round_robin_action"|trans }}
        </a>
    </p>
{% endblock %}

{% block secondary_content %}
    <h3>{{ "generate.generation_explanation"|trans }}</h3>
    <p>{{ "generate.generation_explanation_description"|trans }}</p>
    <h3>{{ "generate.common_paramters"|trans }}</h3>
    <p>{{ "generate.common_paramters_description"|trans }}</p>
{% endblock %}