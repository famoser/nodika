{% extends "primary_secondary_content_base.html.twig" %}

{% block title %}{{ "import.title"|trans }}{% endblock %}
{% block description %}{{ "import.description"|trans }}{% endblock %}
{% set theme_color = globals_theme_color_member %}

{% trans_default_domain "administration_organisation_member" %}

{% block primary_content %}
    {{ form(import_form) }}
{% endblock %}

{% block secondary_content %}
    <h3>{{ "import.import_members"|trans }}</h3>
    <p>
        {{ "import.import_members_description"|trans }}
        <br/>
        <a href="{{ path("administration_organisation_member_import_download_template", { "organisation" : organisation.id}) }}">
            {{ "import.import_members_template_download"|trans }}
        </a>
    </p>

    <h3>{{ "import.import_members_required"|trans }}</h3>
    <p>{{ "import.import_members_required_description"|trans }}</p>
{% endblock %}