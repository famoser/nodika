{% macro show_table(organisation, member, show_edit = false) %}
    {% import "macros/buttons.html.twig" as buttons %}

    <table class="table">
        <thead>
        <tr>
            <th>{{ "entity.name"|trans({}, "entity_person") }}</th>
            {% if show_edit %}
                <th>{{ "column.edit"|trans({}, "common_table") }}</th>
                <th>{{ "column.delete"|trans({}, "common_table") }}</th>
            {% endif %}
        </tr>
        </thead>
        <tbody>
        {% for person in member.persons %}
            <tr>
                <td>
                    {{ person }}
                </td>
                {% if show_edit %}
                    <td>
                        {{ buttons.edit_button(path("administration_organisation_member_person_edit", {"organisation": organisation.id, "member": member.id, "person": person.id})) }}
                    </td>
                    <td>
                        {{ buttons.delete_button(path("administration_organisation_member_person_remove", {"organisation": organisation.id, "member": member.id, "person": person.id})) }}
                    </td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endmacro %}