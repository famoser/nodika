{% extends 'layout/base.html.twig' %}

{% block content %}
    <section class="content
        {% if theme_color == "blue" %}
        blue-background
        {% elseif theme_color == "brown" %}
        brown-background
        {% elseif theme_color == "green" %}
        green-background
        {% elseif theme_color == "green2" %}
        green2-background
        {% elseif theme_color == "red" %}
        red-background
        {% endif %}">
        {% include "layout/parts/menu.html.twig" %}
        {% include "layout/parts/flashbag.html.twig" %}
        <div class="container index-container default-color">
            <div class="row">
                <div class="col-md-12">
                    {% block single_content %}
                    {% endblock single_content %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}